<%= render "fetch_header" %>

<h1 class="text-success">FetchIT Log In</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-6 col-lg-4">
        <%= f.label :email %><br />
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-sm-6 col-lg-4">
        <%= f.email_field :email, size: 75, autofocus: true, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-4 col-sm-6 col-lg-4">
        <%= f.label :password %><br />
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6 col-lg-4">
        <%= f.password_field :password, size: 50, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= render "fetch_footer" %>
