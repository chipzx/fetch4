html, body {
  height: 100%;
}

#loading-heatmap {
  z-index: 9999;
}

#map {
  position: absolute;
  float: left;
  z-index: 1;
  height: 768px;
  width:  1024px; 
}

body { padding-top: 70px; }
.fetchit-red { color: #C9121B;}
.fetchit-green { color: #69B36F;}
.devise-bg { background-image: url(<%= asset_path 'bustIn.jpg' %>); background-repeat: no-repeat; background-size: 100% }

.thumb {
    width: 96px;
    height: 72px;
    float: none;
    position: relative;
    top: 7px;
}

form .progress {
    line-height: 15px;
}

.progress {
    display: inline-block;
    width: 100px;
    border: 3px groove #CCC;
}

.progress div {
    font-size: smaller;
    background: orange;
    width: 0;
}
